<%= form_for UserSession.new do |f| %>
  <%= f.text_field :email, :placeholder => "Your email" %>
  <%= f.password_field :password, :placeholder => "Password" %>
  <a href="<%= new_password_reset_url %>" class="reset_password">(Forget something?)</a>
  <button class="black" type="submit">
    <div class="inner_glow">
    Geronimo
    </div>
  </button>
  <div class="spinner" style="display:none" id="signin_spinner"></div>
  <div class="clear"></div>
<% end %>
<script>
  new ChromaHash($$('#new_user_session input[type=password]').first(),{number: 3});
  $('signin_spinner').previous('button').observe('click', function() {
    $('signin_spinner').appear({duration: .5});
  });
</script>
