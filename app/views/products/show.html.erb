<% content_for :head do  %>
  <%= stylesheet_link_tag 'product' %>
<% end %>

<div class="product">
  
  <div class="preview">
    
  </div>
  
  <div class="slider">
    <ul>
      <% @product.product_previews.each do |p| %>
        <%= image_tag p.preview.url(:thumb) %>
      <% end %>
    </ul>
  </div>
  
  <div class="clearfix"></div>

  <div class="buttons">
    <button>Like</button>
    <button>One Click Purchase</button>
    <button>Add to Cart </button>
  </div>
  
</div>