<% content_for :head do %>
  <%= stylesheet_link_tag 'index' %>
  <%= javascript_include_tag 'index' %>
<% end %> 

<article id="main_content" class="tag_container">
<aside>
  <h1 class="index_image">nybles</h1>
  <form action="<%= search_products_path %>">
    <input type="text" name="query" class="main_search" placeholder="Search">
  </form>
</aside>

<article id="main_content">
  <% trending_products_by_tag.each do |tag, products| %>
    <section>
      <h1>Tagged "<%= tag %>"</h1>
      <ul>
        <%= render partial: "index/product", collection: products %>
      </ul>
    </section>
  <% end %>
</article>
