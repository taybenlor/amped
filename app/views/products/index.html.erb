<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Thumbnail file name</th>
    <th>Thumbnail content type</th>
    <th>Thumbnail file size</th>
    <th>Thumbnail updated at</th>
    <th>File file name</th>
    <th>File content type</th>
    <th>File updated at</th>
    <th>Preview file name</th>
    <th>Preview content type</th>
    <th>Preview updated at</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= product.thumbnail_file_name %></td>
    <td><%= product.thumbnail_content_type %></td>
    <td><%= product.thumbnail_file_size %></td>
    <td><%= product.thumbnail_updated_at %></td>
    <td><%= product.file_file_name %></td>
    <td><%= product.file_content_type %></td>
    <td><%= product.file_updated_at %></td>
    <td><%= product.preview_file_name %></td>
    <td><%= product.preview_content_type %></td>
    <td><%= product.preview_updated_at %></td>
    <td><%= product.user_id %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

